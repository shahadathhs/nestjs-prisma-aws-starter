# =============================================================================
# Database Backup Configuration
# =============================================================================

# Database Connection
DB_HOST=db
DB_PORT=5432
DB_NAME=nestjs_starter_db
DB_USER=postgres
DB_PASSWORD=postgres

# Backup Settings
BACKUP_DIR=/backups
RETENTION_DAYS=7
COMPRESSION=gzip
BACKUP_FORMAT=custom

# Cloud Storage (Optional - AWS S3)
AWS_S3_BUCKET=
AWS_S3_PREFIX=database-backups
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Backup Schedule (Cron Format)
# Default: Daily at 2:00 AM
BACKUP_SCHEDULE="0 2 * * *"

# Additional Options
ENABLE_S3_UPLOAD=false
ENABLE_VERIFICATION=true
ENABLE_LOGGING=true

# Email Notifications (Optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
NOTIFICATION_EMAIL=
